# ---------------------------
# Server
# ---------------------------
PORT=3000
NODE_ENV=development

# ---------------------------
# Database (PostgreSQL)
# ---------------------------
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=<your-db-password>
DB_DATABASE=pm3

# ---------------------------
# TypeORM flags (no usar en prod)
# ---------------------------
DB_SYNCHRONIZE=false
DB_DROP=false

# ---------------------------
# JWT
# Reemplazar por valores reales y seguros (m√≠nimo 32 chars)
# Puedes generar con:  node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# ---------------------------
JWT_ACCESS_SECRET=<your-32char-access-secret>
JWT_REFRESH_SECRET=<your-32char-refresh-secret>
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# ---------------------------
# Rate limit
# ---------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
